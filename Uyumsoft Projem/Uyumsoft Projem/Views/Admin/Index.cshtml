@using Uyumsoft_Projem.ViewModels
@model AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        .admin-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 15px;
        }

            .admin-card .card-body {
                padding: 2rem;
            }

        .stat-icon {
            font-size: 3rem;
            opacity: 0.8;
        }

        .admin-nav {
            background-color: #f8f9fa;
            border-radius: 10px;
            margin-bottom: 2rem;
        }

            .admin-nav .nav-link {
                border-radius: 8px;
            }
    </style>
}

<div class="container-fluid py-5">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">Admin Dashboard</h1>

            <!-- Admin Navigation -->
            <div class="admin-nav p-3 mb-4">
                <ul class="nav nav-pills">
                    <li class="nav-item">
                        <a class="nav-link active" asp-action="Index">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Users">User Management</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Songs">Song Management</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="MonthlyReports">Monthly Reports</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-5">
        <div class="col-md-3 mb-4">
            <div class="card admin-card h-100">
                <div class="card-body text-center">
                    <i class="fa fa-users stat-icon"></i>
                    <h2 class="mt-3">@Model.TotalUsers</h2>
                    <p class="mb-0">Total Users</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card admin-card h-100">
                <div class="card-body text-center">
                    <i class="fa fa-music stat-icon"></i>
                    <h2 class="mt-3">@Model.TotalSongs</h2>
                    <p class="mb-0">Total Songs</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card admin-card h-100">
                <div class="card-body text-center">
                    <i class="fa fa-dollar stat-icon"></i>
                    <h2 class="mt-3">$@Model.TotalRevenue.ToString("F2")</h2>
                    <p class="mb-0">Total Revenue</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card admin-card h-100">
                <div class="card-body text-center">
                    <i class="fa fa-play stat-icon"></i>
                    <h2 class="mt-3">@Model.TotalPlays</h2>
                    <p class="mb-0">Total Plays</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Recent Transactions</h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentTransactions.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>User</th>
                                        <th>Amount</th>
                                        <th>Type</th>
                                        <th>Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var transaction in Model.RecentTransactions)
                                    {
                                        <tr>
                                            <td>@(transaction.User?.UserName ?? "System")</td>
                                            <td>$@(transaction.Amount?.ToString("F2") ?? "0.00")</td>
                                            <td><span class="badge bg-info">@transaction.Type</span></td>
                                            <td>@(transaction.TransactionDate?.ToString("MM/dd") ?? "")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No recent transactions</p>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Top Songs</h5>
                </div>
                <div class="card-body">
                    @if (Model.TopSongs.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Title</th>
                                        <th>Artist</th>
                                        <th>Plays</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var song in Model.TopSongs.Take(5))
                                    {
                                        <tr>
                                            <td>@song.Title</td>
                                            <td>@string.Join(", ", song.Artists.Select(a => a.UserName))</td>
                                            <td><span class="badge bg-success">@song.ClickTimes</span></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No songs available</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>