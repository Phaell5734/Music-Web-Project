@model IEnumerable<Uyumsoft_Projem.ViewModels.SongSingerRequestViewModel>

@if (Model == null || !Model.Any())
{
    return;
}

<div id="requestsWrapper">
    <h5>Co-Singer Requests</h5>
    <ul class="list-group">
        @foreach (var request in Model)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center"
                data-request-id="@request.RequestId">
                <div>
                    <em>@request.SenderUserName</em> wants you to be added to
                    <strong>“@request.SongTitle”</strong> as a Co-Artist.
                </div>
                <button type="button"
                        class="btn btn-sm btn-outline-primary modal-open"
                        data-toggle="modal"
                        data-target="#requestModal"
                        data-request-id="@request.RequestId"
                        data-sender="@request.SenderUserName"
                        data-title="@request.SongTitle">
                    Details
                </button>
            </li>
        }
    </ul>
</div>

@* Modal *@
<div class="modal fade" id="requestModal" tabindex="-1" role="dialog" aria-labelledby="requestModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="requestModalLabel">Co-Singer Request</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p id="modalBodyText" style="color: #212529;"></p>
            </div>
            <div class="modal-footer">
                <button type="button" id="acceptRequestBtn" class="btn btn-success">Accept</button>
                <button type="button" id="rejectRequestBtn" class="btn btn-danger">Reject</button>
            </div>
        </div>
    </div>
</div>



