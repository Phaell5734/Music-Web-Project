@model List<Uyumsoft_Projem.Models.Song>
@{
    ViewData["Title"] = "Artist Details";
    var artist = ViewBag.Artist as User;
    var isFollowing = ViewBag.IsFollowing as bool? == true;
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h1 class="h3">@artist.UserName</h1>
                    <p class="text-muted">@artist.FirstName @artist.LastName</p>

                    @if (User.Identity.IsAuthenticated)
                    {
                        @if (isFollowing)
                        {
                            <p class="text-success"><i class="fa fa-check-circle me-1"></i> Following</p>
                            <form asp-action="Follow" asp-route-artistName="@artist.UserName" method="post">
                                <button type="submit" class="btn btn-secondary w-100">
                                    <i class="fa fa-user-minus me-1"></i> Unfollow
                                </button>
                            </form>
                        }
                        else
                        {
                            <form asp-action="Follow" asp-route-artistName="@artist.UserName" method="post">
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="fa fa-user-plus me-1"></i> Follow
                                </button>
                            </form>
                        }
                    }
                    else
                    {
                        <p class="text-muted">
                            <a asp-controller="Account" asp-action="Login">Log in</a> to follow this artist.
                        </p>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <h2>Songs by @artist.UserName</h2>
            <div class="row">
                @foreach (var song in Model)
                {
                    <div class="col-md-6 mb-4">
                        <div class="card">
                            <img src="@song.ImagePath" class="card-img-top" alt="@song.Title">
                            <div class="card-body">
                                <h5 class="card-title">@song.Title</h5>
                                <p class="card-text">Genre: @song.Genre</p>
                                <a href="/Song/SongDetails?id=@song.SongId" class="btn btn-primary">Details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>